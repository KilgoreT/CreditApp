<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        >
        <LinearLayout
            android:id="@+id/creditItem_NameAndType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tvCreditName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_weight="3"
                tools:text="На еду"
                />

            <TextView
                android:id="@+id/tvCreditType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|top"
                android:layout_weight="1"
                tools:text="Differencial payout"
                android:textColor="@color/colorAccent"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/creditItem_AmountAndMonthCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/creditItem_NameAndType">
            <TextView
                android:id="@+id/tvCreditAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="22sp"
                tools:text="5000000 $"
                />
            <TextView
                android:id="@+id/tvCreditMonthCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="22sp"
                tools:text="на срок: 24 мес."
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/creditItem_RateAndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/creditItem_AmountAndMonthCount"
            >
            <TextView
                android:id="@+id/tvCreditRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="22sp"
                tools:text="под 18%"
                />

            <TextView
                android:id="@+id/tvCreditDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="22sp"
                tools:text="с 2018-12-04"
                />
        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>