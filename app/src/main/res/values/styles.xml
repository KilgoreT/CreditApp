<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AcLaunch" parent="AppTheme">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="TextView" parent="AppTheme">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="AcLaunch.TextView.Wellcome" parent="TextView">
        <item name="android:textSize">64sp</item>
    </style>

    <style name="AcLaunch.TextView.Register" parent="TextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditText" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
    </style>

</resources>
